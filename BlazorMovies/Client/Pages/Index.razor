@page "/"

<div>
    <h3>Movie</h3>
    <MoviesList Movies="movies" />
</div>

<div>
    <h3>Create a movie</h3>
    <br />
    @*<DummyTextbox placeholder="movie name" disabled="true" />*@
    @* using attributes dictionary *@
    <DummyTextbox @attributes="additionalParameters" />
</div>

@code{

    private IDictionary<string, object> additionalParameters = new Dictionary<string, object>
                                 {
                                     { "placeholder", "new movie title" },
                                     { "disabled", "true" }
                                 };


    private List<Movie> movies;

    protected override void OnInitialized()
    {
        movies = new List<Movie>
        {
            new Movie {Title = "Spider-Man: Far From Home", ReleaseDate = new DateTime(2019, 7, 2)  },
            new Movie {Title = "Hulk", ReleaseDate = new DateTime(2003, 11, 23)  },
            new Movie {Title = "Terminator", ReleaseDate = new DateTime(1990, 7, 16)  }
        };
    }

}